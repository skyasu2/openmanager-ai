###############################################
# OpenManager AI v8 WSL2 설정 (고사양 환경)  #
###############################################
# 경로: %USERPROFILE%\.wslconfig
# 목적: 8코어+ / 32GB+ 환경 최적화
# 참고: 기본 런타임(현재 4코어/16GB/swap=0)과 다른 선택형 프로파일
# 적용: wsl --shutdown 후 재시작 시 반영

[wsl2]
# 메모리: 호스트 32GB 기준 62.5% 할당
memory=20GB

# CPU: 8코어 할당 (호스트 여유 확보)
processors=8

# 스왑: 메모리 충분하므로 최소화
swap=4GB
swapFile=D:\wsl-swap.vhdx

# 네트워크: mirrored 모드
networkingMode=mirrored
localhostForwarding=true

[experimental]
# 메모리 최적화
autoMemoryReclaim=gradual
sparseVhd=true

# LLM CLI 안정화: dnsTunneling/autoProxy OFF
dnsTunneling=false
autoProxy=false

