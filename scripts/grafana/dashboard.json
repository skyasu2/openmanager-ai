{
  "__inputs": [
    {
      "name": "DS_MIMIR",
      "label": "Mimir",
      "description": "Prometheus-compatible metrics data source",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    },
    {
      "name": "DS_LOKI",
      "label": "Loki",
      "description": "Log aggregation data source",
      "type": "datasource",
      "pluginId": "loki",
      "pluginName": "Loki"
    }
  ],
  "__elements": {},
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "11.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" },
    { "type": "datasource", "id": "loki", "name": "Loki", "version": "1.0.0" },
    { "type": "panel", "id": "gauge", "name": "Gauge", "version": "" },
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "" },
    { "type": "panel", "id": "logs", "name": "Logs", "version": "" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "" },
    { "type": "panel", "id": "table", "name": "Table", "version": "" }
  ],
  "id": null,
  "uid": "openmanager-ai-overview",
  "title": "OpenManager AI - Server Overview",
  "description": "OTel-native server monitoring dashboard for OpenManager AI. Metrics via OTLP, logs via Loki.",
  "tags": ["openmanager", "otel", "otlp", "server-monitoring"],
  "style": "dark",
  "timezone": "Asia/Seoul",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "liveNow": false,
  "refresh": "5m",
  "schemaVersion": 39,
  "version": 1,
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"],
    "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d"]
  },
  "templating": {
    "list": [
      {
        "name": "server",
        "label": "Server",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_MIMIR}" },
        "query": "label_values(system_cpu_utilization, host_name)",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "current": { "selected": true, "text": "All", "value": "$__all" },
        "sort": 1
      },
      {
        "name": "host_type",
        "label": "Host Type",
        "type": "custom",
        "query": "web,application,database,cache,storage,load-balancer",
        "includeAll": true,
        "multi": true,
        "current": { "selected": true, "text": "All", "value": "$__all" },
        "sort": 0
      }
    ]
  },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Server Overview",
      "type": "row",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "title": "Total Servers",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${DS_MIMIR}" },
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 1 },
      "targets": [
        {
          "expr": "count(group by (host_name) (system_cpu_utilization{host_name=~\"$server\"}))",
          "legendFormat": "Servers",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 20 }
            ]
          },
          "unit": "short"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "textMode": "auto"
      }
    },
    {
      "id": 3,
      "title": "Avg CPU Utilization",
      "type": "gauge",
      "datasource": { "type": "prometheus", "uid": "${DS_MIMIR}" },
      "gridPos": { "h": 4, "w": 5, "x": 4, "y": 1 },
      "targets": [
        {
          "expr": "avg(system_cpu_utilization{host_name=~\"$server\"})",
          "legendFormat": "CPU",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "#EAB839", "value": 0.6 },
              { "color": "orange", "value": 0.75 },
              { "color": "red", "value": 0.9 }
            ]
          },
          "min": 0,
          "max": 1,
          "unit": "percentunit"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      }
    },
    {
      "id": 4,
